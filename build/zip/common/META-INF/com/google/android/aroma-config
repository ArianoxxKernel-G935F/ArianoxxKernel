##
# Fix Colorspace Issue
# You can use one of following values:
#   "rgba", "abgr", "argb", "bgra"

ini_set("force_colorspace","rgba");

##
# Initializing Information
#

ini_set("rom_name",             "SuperSpeedKernel || by @Arianoxx ");
ini_set("rom_version",          "V2.2 - G93XFXXS3EREM");
ini_set("rom_author",           "@Arianoxx");
ini_set("rom_device",           "S7/S7 edge");
ini_set("rom_date",             "4/1/2019");


writetmpfile("check_s7.prop","install=0");
writetmpfile("deodexed.prop","install=0");
writetmpfile("g930x.prop","install=0");
writetmpfile("g935x.prop","install=0");

