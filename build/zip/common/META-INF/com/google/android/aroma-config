    "<~welcome.codename>\t: <b><#selectbg_g>@Arianoxx</#></b>\n"+
	"<~welcome.updated>\t\t: <b><#selectbg_g>"+ini_get("rom_date")+"</#></b>\n\n\n"+

	"<~welcome.next>",

	#-- Icon
